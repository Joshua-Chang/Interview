<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TaskActivity">

    <TextView
        android:id="@+id/tv_standard"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="standard/singTop" />
    <TextView
        android:id="@+id/tv_single_task"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="singleTask" />
    <TextView
        android:id="@+id/tv_single_instance"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="singleInstance" />
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_inner_single_task"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="innerSingleTask" />
    <TextView
        android:id="@+id/tv_inner_single_instance"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="innerSingleInstance" />
</LinearLayout>